---json
{
    "permalink": "feed.xml",
    "eleventyExcludeFromCollections": true,
    "metadata": {
        "title": "lunarlily",
        "description": "Update feed for the fourth coolest website on the moon (allegedly)",
        "language": "en",
        "base": "https://lunarlily.neocities.com/",
        "author": {
            "name": "Luna"
        }
    }
}
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom" xml:lang="{{ metadata.language }}">
  <title>{{ metadata.title }}</title>
  <subtitle>{{ metadata.description }}</subtitle>
  <link href="{{ permalink | htmlBaseUrl(metadata.base) }}" rel="self" />
  <link href="{{ metadata.base | addPathPrefixToFullUrl }}" />
  <updated>{{ collections.changelog | getNewestCollectionItemDate | dateToRfc3339 }}</updated>
  <id>{{ metadata.base | addPathPrefixToFullUrl }}</id>
  <author>
    <name>{{ metadata.author.name }}</name>
  </author>
  {%- for entry in changelog | reverse %}
  <entry>
    <title>{{ entry.title }}</title>
    <link href="{{ entry.link }}" />
    <updated>{{ entry.date }}</updated>
    <id>{{ entry.id }}</id>
    <content type="html">{{ entry.content | renderTransforms(post.data.page, metadata.base) }}</content>
  </entry>
  {%- endfor %}
</feed>